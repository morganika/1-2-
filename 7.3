class Point{

private:
	int x;
	int y;

public:

	Point()
	{
		x = 0;
		y = 0;
		cout << this << "    constructor" << endl;
	}
	Point(int valueX, int valueY) 
	{
		x = valueX;
		y = valueY;
		cout << this << "    constructor" << endl;
	}

	Point operator +(const Point &other)
	{
		Point temp;
		temp.x = this->x + other.x;
		temp.y = this->y + other.y;
		return temp;
		}
};

